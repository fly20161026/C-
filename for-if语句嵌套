#include <stdio.h>//20以内不能被3整除的数之和
int main()
{
    int i, sum=0;
    for(i=1, sum=0; i<=20; i++)
    {
        if(i%3==0)    //能被3整除这个条件如何写呢？
        {
           continue;          //应该用哪个循环结束语句呢？
        }                  
        sum += i;
    }
    printf("sum=%d\n", sum);
    return 0;    
}
